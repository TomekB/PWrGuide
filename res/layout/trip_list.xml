<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@color/normal_blue">
	<ListView android:id="@+id/tripsListView"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1.0" android:divider="@color/white"
		android:dividerHeight="4dip" />
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginBottom="5dip" android:layout_marginTop="5dip"
		android:layout_marginLeft="100dip" android:layout_marginRight="100dip" android:background="@xml/toolbar_border">
	<ImageView android:id="@+id/addTripButton" android:src="@drawable/ic_menu_add"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center" />
			</LinearLayout>
</LinearLayout>